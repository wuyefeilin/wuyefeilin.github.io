// catalog
.catalog {
position fixed;
margin auto;
top 10em;
transform  translateX(600px);
width 400px;
height 500px;
overflow-y auto
background  #ffffff
}
.level1 {
    font-weight bold 
    font-size 1.5em
}

.level2 {
    color #252525 
    font-weight bold 
    font-size 1em
}

.level3 {
    font-size 0.8em 
